! This dotfile is autostarted by startx (.xinitrc)

! Super_R key is set to mod3, this is a application hotkey in dwm
remove mod4 = Super_R
add mod3 = Super_R

! Alt_R key is set to mod5, this is a hotkey to open textfiles in dwm
remove mod1 = Alt_R
add mod5 = Alt_R

! Caps_Lock becomes the Escape key and vice versa. (Handy for vim)
remove Lock = Caps_Lock
keysym Escape = Caps_Lock
keysym Caps_Lock = Escape
add Lock = Caps_Lock
